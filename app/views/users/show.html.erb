<div class="user-container">
  <h2 class="user-container__title">My page</h2>
  <div class="profile-group">
    <div class="profile-group__left">
      <%= attachment_image_tag @user, :profile_image, fallback: 'noimage-760x460.png' %>
    </div>
    <div class="profile-group__right">
      <div class="profile-col">
        <p class="profile-col__name"><%= @user.name %></p>
        <p class="profile-col__item">家事レベル：<span class="profile-col__item--big"><%= @user.housework_level %></span></p>
        <p class="profile-col__item">次のレベルまで：<span class="profile-col__item--big"><%= to_next_level(@user) %></span>exp</p>
      </div>
      <div class="profile-col">
        <p class="profile-col__item">苦手な家事ジャンル：<%= @user.weaknesses_genre.name %></p>
        <% if @user.current_room.nil? %>
          <p class="profile-col__item">最近入室したルーム：なし</p>
        <% else %>
          <p class="profile-col__item">最近入室したルーム：<%= @user.current_room.name %></p>
        <% end %>
        <div><%= link_to "編集", edit_user_path, class: "profile-col__btn" %></div>
      </div>
    </div>
  </div>

  <div class="link-group">
      <%= link_to "タスク管理", tasks_path, class: "link-group__item" %>
      <%= link_to "ルーム新規作成", new_room_path, class: "link-group__item" %>
      <%= link_to "ひみつの部屋", monsters_path, class: "link-group__item" %>
  </div>

  <div class="user-container__foot">
    <%= link_to "退会を希望する場合はこちら", confirm_unsubscribe_path(@user), class: "user-container__foot" %><i class="fas fa-chevron-right"></i>
  </div>
</div>

