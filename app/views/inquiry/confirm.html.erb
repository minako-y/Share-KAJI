<div class="inquiry-container">
  <h1 class="inquiry-container__title">お問い合わせ</h1>
  <p class="inquiry-container__lead">メールアドレス、お問い合わせ内容が正しく入力されているか、再度確認してください。</p>
  <%= form_for @inquiry, :url => inquiry_path do |f| %>
  <div class="inquiry-form-wrapper">
    <div class="inquiry-form-wrapper__form-group">
      <div class="inquiry-form-wrapper__form-group__label"><%= f.label :name, '名前' %></div>
      <div class="inquiry-form-wrapper__form-group__field">
        <%= f.hidden_field :name %>
        <%= @inquiry.name %>
      </div>
    </div>
    <div class="inquiry-form-wrapper__form-group">
      <div class="inquiry-form-wrapper__form-group__label"><%= f.label :email, 'メールアドレス' %></div>
      <div class="inquiry-form-wrapper__form-group__field">
        <%= f.hidden_field :email %>
        <%= @inquiry.email %>
      </div>
    </div>
    <div class="inquiry-form-wrapper__form-group">
      <div class="inquiry-form-wrapper__form-group__label"><%= f.label :message, 'お問い合わせ内容' %></div>
      <div class="inquiry-form-wrapper__form-group__field">
        <%= f.hidden_field :message %>
        <%= simple_format(@inquiry.message) %>
      </div>
    </div>
    <div class="inquiry-form-wrapper__form-group">
      <%= f.submit "送信", class: "inquiry-form-wrapper__form-group__btn" %>
    </div>
  </div>
  <% end %>
</div>