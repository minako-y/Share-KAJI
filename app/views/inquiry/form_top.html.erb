<div class="inquiry_container">
  <h1>お問い合わせ</h1>
  <%= render 'devise/shared/error_messages', resource: @inquiry  %>
  <%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
    <table>
      <tr>
        <th>名前</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <th>お問い合わせ内容</th>
        <td><%= f.text_area :message %></td>
      </tr>
    </table>
    <%= f.submit "確認" %>
  <% end %>
</div>
