<div class="main-container">
  <div class="main-top">
    <h1 class="main-top__title">タスク一覧</h1>
    <div class="main-top__link"><%= link_to "新規タスク作成", new_task_path , class: "fas fa-plus-circle" %></div>
    <div class="main-top__room-unit">
      現在のルーム: <%= current_room.name %>
      <%= link_to "Logout", logout_path, method: :delete, class: "main-top__room-unit__btn" %>
    </div>
  </div>

  <div class="task-wrapper">
    <% @tasks.includes([:genre, :monster]).each do |task| %>
      <%= render 'tasks/task-card', task: task %>
    <% end %>
  </div>
</div>

<div id="mask" class="hidden"></div>
<div id="modal" class="hidden">
  <p>モーダルウィンドウ<p>
</div>